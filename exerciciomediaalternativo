<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <h1 id="resultado1"></h1>
    <h1 id="resultado2"></h1>

    <script type="text/javascript">

        var n1 = parseFloat(prompt("Insira a primeira nota: "))   
        var n2 = parseFloat(prompt("Insira a segunda nota: "))
        
        var media = (n1+n2)/2

        function mostrasituacao(media) {
            if (media >= 7) {
                document.getElementById("resultado1").innerHTML = "Parabéns, sua média é de " + media;
            } else {
                document.getElementById("resultado2").innerHTML = "Você não foi aprovado, toma vergonha na cara! Olha sua média aqui >> " + media;
            }
        }
    </script>

    <button onclick="mostrasituacao(media)">Saber média</button>
